<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link rel="stylesheet" href="/stylesheets/home_page.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-+TfWVACRRcI2eFz9JkWoF5vR21abF9lt8jPQv7D0h5IcTv8p12/PU6JQJpS2jy2u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body id="body_home_page">
<header class="bg-danger text-white py-2">
    <div class="container d-flex justify-content-between align-items-center">
        <a href="/" class="btn btn-outline-light"><i class='bx bx-log-out'></i> Logout</a>

    </div>
</header>

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Best Books</h1>
            <p class="lead text-muted">Select from the best books available.</p>
        </div>
    </div>
</section>

<section class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% cars.forEach(car => { %>
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="/carimg/<%= car.img %>" alt="" class="bd-placeholder-img card-img-top">

                        <div class="card-body">
                            <p class="card-text"><%= car.Year %> - <%= car.Make %> <%= car.Model %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/carPage/<%= car._id %>" class="btn btn-sm btn-outline-secondary">Rent now</a>
                                </div>
                                <small class="text-muted">$<%= car.cost %>/ day</small>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQzBsVy2pD/2T/fD9HXb5+3j" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YV2MKTs3wOlbr4J1Z2167L0/4rz79/J8MysHroV3BdZP6qdY" crossorigin="anonymous"></script>

</body>
</html>
